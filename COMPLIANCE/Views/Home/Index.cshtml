                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">โปรดเลือกการจัดการกฎหมาย (Please Select manage law)</h4>
                                <!--begin::Close-->
                                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                                    <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                                </div>
                                <!--end::Close-->
                            </div>
                            <div class="modal-body">
                                <button type="button" class="btn btn-warning w-100 mb-2" style="background-color: rgb(241 90 34);color: white" data-bs-toggle="modal" data-bs-target="#kt_modal_1">
                                    <b>Inactivate Law</b>
                                </button>
                                <button type="button" class="btn btn-success w-100" style="color: white" data-bs-toggle="modal" data-bs-target="#kt_modal_1">
                                    <b>Reactivate Law</b>
                                </button>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Header-->
                <!--begin::Body-->
                <div class="py-0 mx-5" style="position: relative">
                    <hr class="absolute w-1/4 h-1 bg-orange-default rounded border border-orange-light" style="position: absolute;width: 25%;background-color: rgb(241 90 34);height: 5px; opacity: 1">
                    <hr class="w-full bg-gray-light h-1 border rounded border-gray-light" style="height: 5px;background-color: rgb(228 231 233)">
                </div>
                <div class="card-body py-3">
                    <div class="table-responsive">
                        <table id="kt_datatable_both_scrolls" class="table table-striped table-bordered gy-5 gs-7" style="background-color:white !important">
