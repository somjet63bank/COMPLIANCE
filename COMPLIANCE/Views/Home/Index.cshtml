@model IEnumerable<COMPLIANCE.Models.Entities.User>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutTheme.cshtml";
}

<div class="d-flex flex-column flex-column-fluid pt-1">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar py-1 py-lg-2 mb-3" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, .2);background: white;z-index: 90;">
        <!--begin::Toolbar container-->
        <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
            <!--begin::Page title-->
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <!--begin::Title-->
                @* <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Users</h1> *@
                <!--end::Title-->
                <!--begin::Breadcrumb-->
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-muted">
                        <a href="/Home/Index" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                        @* <span class="bullet bg-gray-500 w-5px h-2px"></span> *@
                        /
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-muted">กฎหมายที่เกี่ยวข้อง และ ใบอนุญาต (My related laws and License)</li>
                    <!--end::Item-->
                </ul>
                <!--end::Breadcrumb-->
            </div>
            <!--end::Page title-->
        </div>
        <!--end::Toolbar container-->
    </div>
    <!--end::Toolbar-->
    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid mt-5">
        <!--begin::Content container-->
        <div id="kt_app_content_container" class="app-container container-xxl">
            <div class="card mb-5 mb-xl-8" style="background-color: rgb(242 244 248);box-shadow: 0 4px 8px 0 rgba(0, 0, 0, .2);">
                <!--begin::Header-->
                <div class="card-header border-0 pt-5">
                    <h2 class="align-items-start flex-column">
                        <span class="fw-bold fs-3 mb-1" style="color: rgb(0 97 175)">รายการงานค้าง (All my pendings)</span>
                    </h2>
                </div>
                <div class="py-0 mx-5" style="position: relative">
                    <hr class="absolute w-1/4 h-1 bg-orange-default rounded border border-orange-light" style="position: absolute;width: 25%;background-color: rgb(241 90 34);height: 5px; opacity: 1">
                    <hr class="w-full bg-gray-light h-1 border rounded border-gray-light" style="height: 5px;background-color: rgb(228 231 233)">
                </div>
                <!--end::Header-->
                <!--begin::Body-->
                <div class="card-body py-3 d-flex justify-content-between" style="font-size:16px">
                    @foreach (var item in new[] { "รอการ ประเมินความเกี่ยวข้อง", "รอการ ให้คำแนะนำจาก SME", "รอการจัดทำ สิ่งที่ต้องปฏิบัติ", "สิ่งที่ต้องดำเนินการ", "ใบอนุญาตที่ต้องดำเนินการ", "อนุมัติ" })
                    {
                        <div class="card shadow-sm align-items-start justify-content-between" style="width: 15%; background-color: @(item == "อนุมัติ" ? "#ed3011" : (item.Contains("รอการ") ? "rgb(0 97 173)" : "rgb(28 22 102)"));color: white">
                            <div class="p-1" style="font-size: 17px">
                                @item
                            </div>
                            <div class="p-1">
                                @(item == "อนุมัติ" ? "Approval action" : (item.Contains("รอการ") ? "Wait for assessments" : "To-do list action"))
                            </div>
                            <div class="mb-2" style="justify-content: center;display: flex;width: 100%;font-size:25px">
                                -
                            </div>
                        </div>
                    }
                </div>
                <!--end::Body-->
            </div>
        </div>
        <!--end::Content container-->
    </div>
    <!--end::Content-->
    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <!--begin::Content container-->
        <div id="kt_app_content_container" class="app-container container-xxl">
            <div class="card mb-5 mb-xl-8" style="background-color: rgb(242 244 248);box-shadow: 0 4px 8px 0 rgba(0, 0, 0, .2);">
                <!--begin::Header-->
                <div class="card-header border-0 pt-5">
                    <h2 class="align-items-start flex-column">
                        <span class="fw-bold fs-3 mb-1" style="color: rgb(0 97 175)">ค้นหา (Search)</span>
                    </h2>
                </div>
                <div class="py-0 mx-5" style="position: relative">
                    <hr class="absolute w-1/4 h-1 bg-orange-default rounded border border-orange-light" style="position: absolute;width: 25%;background-color: rgb(241 90 34);height: 5px; opacity: 1">
                    <hr class="w-full bg-gray-light h-1 border rounded border-gray-light" style="height: 5px;background-color: rgb(228 231 233)">
                </div>
                <div class="card-header border-0 pt-5 d-block">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="form-group mb-5">
                            <label class="form-label">ชื่อกฎหมาย (Name of the Law)</label>
                            <input class="form-control" />
                            <span class="text-danger"></span>
                        </div>
                        <div class="d-flex">
                            <a href="#" class="btn btn-sm btn-light-warning" style="margin-right: 10px;background-color: rgb(241 90 34);color: white">
                                <i class="fas fa-search fs-2" style="color: white"></i>Search
                            </a>
                            <a href="#" class="btn btn-sm btn-light-warning" style="background-color: rgb(241 90 34);color: white">
