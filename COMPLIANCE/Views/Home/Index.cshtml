                            </tbody>
                        </table>
                    </div>
                </div>
                <!--end::Body-->
            </div>
        </div>
        <!--end::Content container-->
    </div>
    <!--end::Content-->
    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <!--begin::Content container-->
        <div id="kt_app_content_container" class="app-container container-xxl">
            <div class="card mb-5 mb-xl-8" style="background-color: rgb(242 244 248);box-shadow: 0 4px 8px 0 rgba(0, 0, 0, .2);">
                <!--begin::Header-->
                <div class="card-header border-0 pt-5">
                    <h2 class="align-items-start flex-column">
                        <span class="fw-bold fs-3 mb-1" style="color: rgb(0 97 175)">ใบอนุญาตที่เกี่ยวข้อง (My related license)</span>
                    </h2>
                </div>
                <div class="py-0 mx-5" style="position: relative">
                    <hr class="absolute w-1/4 h-1 bg-orange-default rounded border border-orange-light" style="position: absolute;width: 25%;background-color: rgb(241 90 34);height: 5px; opacity: 1">
                    <hr class="w-full bg-gray-light h-1 border rounded border-gray-light" style="height: 5px;background-color: rgb(228 231 233)">
